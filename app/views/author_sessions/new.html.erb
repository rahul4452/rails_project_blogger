

<div class="row">
	<div class="col-lg-6">
		<div class="row">
				<%= form_with(url: author_sessions_path,method: "post",class: 'login_form_class')   do %>
				<div>
					
					<%= text_field_tag :email ,nil,placeholder: "Email" ,class: "input_class",pattern: "[a-zA-Z0-9._%+-]+@[a-z0-9.-]+\.[a-zA-Z]{2,4}", required: true ,        title: "must be correct email"%>
				</div>
				
				<div>
					<%= password_field_tag :password, nil, placeholder: "password",class: 'input_class',required: true, minlength: "6" %>
					<br>
					<br>
				</div>
				
				<div>
					<%= submit_tag "Login" %>
				</div>
			<%end%>
		</div>
	</div>
	<div class="col-lg-6">
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-left">
					<h1>Login !</h1>
					<p>To keep connected with us please login with your personal info</p>
					<!-- <button class="ghost" id="signIn">Sign In</button> -->
				</div>
				<div class="overlay-right">
					<%= link_to 'Create Account', new_author_path, class: 'button_class' %>		
				</div>
			</div>
		</div>
	</div>
</div>

<br><br><br><br>


